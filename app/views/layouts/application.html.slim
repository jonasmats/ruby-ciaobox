doctype html
html
  head
    title
      | Ciaobox
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false'
    = csrf_meta_tags
  body
    #sb-site.sb-slide
      - if current_page?root_path
        = render partial: "layouts/frontend/header"
      - else
        = render partial: "layouts/frontend/header.account"

      = yield
      = render partial: "layouts/frontend/footer"
    .sb-slidebar.sb-left
      = render partial: "layouts/frontend/links"
