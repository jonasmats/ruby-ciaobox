.portlet.light.bg-inverse
  .portlet-body.form
    = form_for [:admin, :employee, @article], html: {class: "form-horizontal"} do |f|
      = render "/layouts/shared/form_errors/admin", object: f.object
      .form-body
        .form-group.last
          label.col-md-3.control-label
            = Article.h :status
          .col-md-4
            = f.select :status, options_for_select(Article.statuses.map{|k, v| [t(".#{k}"), k]} , selected: @article.status), { include_blank: t('.blank')}, {class: "form-control"}
        .form-group
          label.col-md-3.control-label
            = Article.h :title
          .col-md-4
            = f.text_field :title, class: "form-control", placeholder: "Enter title"
        .form-group.last
          label.col-md-3.control-label
            = Article.h :content
          .col-md-9
            = f.cktext_area :content, class: "form-control", placeholder: "Enter content"
      .form-actions
        .row
          .col-md-offset-3.col-md-4
            = f.submit class: "btn green"
            = link_to admin_employee_articles_path, class: "btn default" do
              = t(".cancel")
